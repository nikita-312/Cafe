<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context="com.conceptioni.cafeapp.activity.CardActivity">
    <RelativeLayout
        android:id="@+id/mainrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_5"
        tools:ignore="UnusedAttribute"
        android:background="@color/colorToolbar">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:src="@drawable/back"
            tools:ignore="ContentDescription,RtlSymmetry" />

        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Card"
            android:textColor="@color/colorblack"
            android:textSize="@dimen/sp_16"
            tools:ignore="HardcodedText" />

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">
        <LinearLayout
            android:id="@+id/llCash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_drawable"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:layout_weight="0.5"
            android:gravity="center">
        <ImageView
            android:id="@+id/pay_cashiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pay_cash"/>
        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:id="@+id/paybycashtvr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAY BY CASH"
            android:textColor="@color/colorFont"
            android:layout_marginTop="@dimen/dp_10"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_drawable"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10">
            <ImageView
                android:id="@+id/pay_cardiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_card"/>
            <com.conceptioni.cafeapp.utils.TextviewRegular
                android:id="@+id/paybycardtvr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY BY CARD"
                android:textColor="@color/colorFont"
                android:layout_marginTop="@dimen/dp_10"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_drawable"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_7"
        android:paddingLeft="@dimen/dp_60"
        android:paddingRight="@dimen/dp_60">
        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROCEED"
            android:textColor="@color/colorwhite"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"/>
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/nointernetrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/internetgif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/internet"
            android:background="@color/colorwhite"
            android:layout_centerInParent="true"/>

        <com.conceptioni.cafeapp.utils.TextviewBold
            android:id="@+id/connectionerror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/internetgif"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/Connection_Error"
            android:textColor="@color/colorblack"
            android:gravity="center"
            android:textSize="@dimen/sp_14"/>

        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:id="@+id/checknet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connectionerror"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/Checkyournetwork"
            android:gravity="center"
            android:textSize="@dimen/sp_12"/>

        <LinearLayout
            android:id="@+id/retryll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checknet"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/retry_drawable"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:gravity="center">

            <com.conceptioni.cafeapp.utils.TextviewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retry"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="true"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
