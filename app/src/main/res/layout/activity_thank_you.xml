<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context="com.conceptioni.cafeapp.activity.ThankYouActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_30"
        android:background="#f8f8f8"
        android:elevation="@dimen/dp_20"
        android:padding="25dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thankyou"/>
        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank You"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_30"
            android:includeFontPadding="false"/>
        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Order"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_marginTop="-20dp"
            android:includeFontPadding="false"/>
        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:id="@+id/tvrContinueshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_drawable"
            android:layout_gravity="center"
            android:text="CONTINUE SHOP"
            android:textColor="@color/colorwhite"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
