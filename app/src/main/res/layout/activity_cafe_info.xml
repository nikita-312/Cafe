<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner"
    tools:context=".activity.CafeInfoActivity">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/splash_cafe_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#90000000"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_40"
        android:elevation="@dimen/dp_20">
        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:id="@+id/tvrCafeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cafe Coffee Day"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorwhite"/>
        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:id="@+id/tvrtableNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table number:5"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorwhite"/>
        <com.conceptioni.cafeapp.utils.TextviewRegular
            android:id="@+id/tvrContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:background="@drawable/login_drawable"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:textColor="@color/colorwhite"/>
    </LinearLayout>
</RelativeLayout>